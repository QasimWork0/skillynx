{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "ui/*": ["./ui/*"],
      "assets/*": ["./assets/*"],
      "entities/*": ["./entities/*"],
      "mockdata/*": ["./mockdata/*"],
      "api/*":["./api/*"],
      "data/*":["./data/*"],
      "hooks/*":["./hooks/*"],
      "language/*":["./language/*"],
      "routes/*":["./routes/*"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": ["node_modules", "build", "coverage", "dist", "lib"]
}
